<div>
  <h2>Your Posts</h2>
  <button class="btn" id="new-post-btn">
    <a href="/dashboard/new-post">Add Post</a>
  </button>
</div>
<div>
  {{#each posts as |post|}}
    <a href="/dashboard/{{post.id}}">
      <div>
        <h3 class="posts">
          {{post.title}}
        </h3>
        <p class="posts">
          {{post.contents}}
        </p>
        <p class="posts">
          {{post.User.name}}
        </p>
        <p class="posts">
          {{format_date post.createdAt}}
        </p>
      </div>
    </a>
  {{/each}}
</div>