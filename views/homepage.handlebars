<div class="row align-center mb-5">
  {{#each posts as |post|}}
    <a href="/{{post.id}}">
      <div>
        <h3>
          {{post.title}}
        </h3>
        <p>
          {{post.contents}}
        </p>
        <p>
          {{post.User.name}}
        </p>
        <p>
          {{post.createdAt}}
        </p>
      </div>
    </a>
  {{/each}}
</div>